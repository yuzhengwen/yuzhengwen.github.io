---
import { Content as IntroText } from "../content/intro.md";
import { baseUrl } from "../resolveBaseUrl";
import NavBar from "./NavBar.astro";
import Typewriter from "./Typewriter.astro";
---

<div id="landing-front">
  <div id="carouselExampleCaptions" class="carousel slide">
    <div class="carousel-indicators">
      <button
        type="button"
        data-bs-target="#carouselExampleCaptions"
        data-bs-slide-to="0"
        class="active"
        aria-current="true"
        aria-label="Slide 1"></button>
      <button
        type="button"
        data-bs-target="#carouselExampleCaptions"
        data-bs-slide-to="1"
        aria-label="Slide 2"></button>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <div class="landing">
          <div class="container-fluid text-align-center">
            <div class="landing-content row align-items-center">
              <div class="col-md-5 landing-left">
                <Typewriter />
                <IntroText />
                <a href="#my-projects" class="btn-grad btn btn-primary"
                  >Projects</a
                >
                <a href="#profile" class="btn btn-primary btn-grad"
                  >Learn About Me</a
                >
              </div>
              <div class="col-md-5 landing-right">
                <img src=`${baseUrl}/images/Me.png` alt="Picture of Me" />
              </div>
            </div>
            <div class="carousel-caption d-none d-md-block">
              <p>Click around or scroll to see what I'm up to!</p>
            </div>
          </div>
        </div>
      </div>
      <div class="carousel-item">
        <img
          src=`${baseUrl}/images/Dian.png`
          class="d-block w-100 full-image"
          alt="..."
        />
        <div class="carousel-caption d-none d-md-block">
          <h5>Dragon in Bloom</h5>
          <p>A story based RPG I am actively developing!</p>
        </div>
      </div>
    </div>
    <button
      class="carousel-control-prev"
      type="button"
      data-bs-target="#carouselExampleCaptions"
      data-bs-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button
      class="carousel-control-next"
      type="button"
      data-bs-target="#carouselExampleCaptions"
      data-bs-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>
<style>
  .btn-grad {
    margin-right: 1rem;
    margin-bottom: 1rem;
    background-image: linear-gradient(
      to right,
      #7d1ab6 0%,
      #b1164f 51%,
      #7d1ab6 100%
    );
    text-align: center;
    text-transform: uppercase;
    border: none;
    transition: 0.3s;
    background-size: 200% auto;
    border-radius: 10px;
  }

  .btn-grad:hover {
    transition: 0.3s;
    scale: 1.1;
    background-position: right center; /* change the direction of the change here */
  }
</style>
